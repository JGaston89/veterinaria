{% extends 'base.html.twig' %}

{% block title %}Categorias index{% endblock %}

{% block body %}
    <h1>Categorias index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Descripcion</th>
                <th>Imagen</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for categoria in categorias %}
            <tr>
                <td>{{ categoria.id }}</td>
                <td>{{ categoria.Nombre }}</td>
                <td>{{ categoria.descripcion }}</td>
                <td><img
                    src="{{ categoria.imagen }}"
                    alt=""
                    class="shadow-xl rounded-md" 
                    style="height:70px; width:70px"</td>
                <td>
                    <a href="{{ path('app_categorias_show', {'id': categoria.id}) }}">show</a>
                    <a href="{{ path('app_categorias_edit', {'id': categoria.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_categorias_new') }}">Create new</a>
{% endblock %}
